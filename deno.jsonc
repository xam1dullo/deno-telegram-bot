{
    "imports": {
        "std/": "https://deno.land/std@0.201.0/"
    },
    "tasks": {
        "dev": "deno run --watch -A src/main.ts"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": ["src/"],
        "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
    }
}
